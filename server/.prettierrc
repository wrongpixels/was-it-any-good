{
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "printWidth": 80,
  "bracketSpacing": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "semi": true,
        "singleQuote": true
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "semi": true,
        "parser": "typescript"
      }
    },
    {
      "files": ["*.jsx"],
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "parser": "json"
      }
    }
  ]
}
