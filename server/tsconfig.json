{
  "skipLibCheck": true,
  "include": ["src/**/*", "../shared", "migrations/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ],
  "compilerOptions": {
    "target": "ES6",
    "types": ["node"],

    "module": "commonjs",

    "resolveJsonModule": true,

    "outDir": "./dist",
    "rootDir": "..",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "skipLibCheck": true
  }
}
